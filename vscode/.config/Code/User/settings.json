{
  "editor.wordWrap": "on",

  // Icons & Themes
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "One Dark Pro Flat",
  "oneDarkPro.bold": true,

  // Git Settings
  "git.autofetch": true,

  // Formatting
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // Highlighting
  "editor.bracketPairColorization.enabled": false,
  "workbench.colorCustomizations": {
    "[One Dark Pro Flat]": {
      "editorBracketHighlight.foreground1": "#e5e07b",
      "editorBracketHighlight.foreground2": "#da70d6",
      "editorBracketHighlight.foreground3": "#87cefa",
      "editorBracketHighlight.foreground4": "#f08080",
      "editorBracketHighlight.foreground5": "#00d18f",
      "editorBracketHighlight.foreground6": "#abb2bf"
    }
  },
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.startupEditor": "none",
  "editor.fontFamily": "'Hurmit Nerd Font', Consolas, 'Courier New', monospace"
}
